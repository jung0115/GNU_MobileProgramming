<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatVoteActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="5">

        <ImageView
            android:id="@+id/img_cat1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/img_cat1"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"/>

        <ImageView
            android:id="@+id/img_cat2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/img_cat2"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"/>

        <ImageView
            android:id="@+id/img_cat3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/img_cat3"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="5">

        <ImageView
            android:id="@+id/img_cat4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/img_cat4"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"/>

        <ImageView
            android:id="@+id/img_cat5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/img_cat5"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"/>

        <ImageView
            android:id="@+id/img_cat6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/img_cat6"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <android.widget.Button
        android:id="@+id/btn_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="투표 종료"/>

</LinearLayout>