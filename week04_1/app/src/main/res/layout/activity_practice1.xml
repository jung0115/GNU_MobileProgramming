<?xml version="1.0" encoding="utf-8"?>
<!-- 4주차 실습 4-2 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Practice1Activity"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white">

    <android.widget.Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button"
        android:text="버튼 1"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여긴 텍스트뷰입니다."
        android:textSize="15dp"
        android:layout_marginVertical="20dp"
        android:textColor="@color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5a7ed1"
        android:textColor="@color/white"
        android:layout_marginVertical="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="@drawable/shape_button"
        android:text="버튼 2"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_marginVertical="20dp"
        android:enabled="false"/>

    <!-- 텍스트뷰 속성 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="textSize 속성"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="textColor 속성"
        android:textColor="#00FF00"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="textStyle 속성"
        android:textStyle="bold|italic"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="typeface 속성"
        android:typeface="serif"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="singleLine 속성 singleLine 속성 singleLine 속성"
        android:singleLine="true"
        android:textColor="@color/black"/>

</LinearLayout>